@model LoginModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}


<script type="text/javascript"></script>


@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-lable="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-lable="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<div class="container">
    <br />
    <div class="row align-items-center">
        <div class="col">
        </div>
        <div class="col">
            <form asp-action="Entrar" asp-controller="Login" method="post">
                <div class="mb-3">
                    <label for="login" class="form-label">Login</label>
                    <input type="text" class="form-control" id="login" asp-for="Login">
                    @Html.ValidationMessageFor(x => x.Login)
                </div>
                <div class="mb-3">
                    <label for="senha" class="form-label">Senha</label>
                    <input type="password" class="form-control" id="senha" asp-for="Senha">
                    @Html.ValidationMessageFor(x => x.Senha)
                </div>

                <p class="mb-4 text-sm mx-auto">
                    Esqueceu a senha ?
                    <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary text-gradient font-weight-bold">Redifinir minha senha</a>
                </p>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
            </form>
        </div>
        <div class="col">
        </div>
    </div>
</div>