@using ControleContatos.Enums;
@model UsuarioModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="text-center">
    <h1 class="display-4">Editar Usuario</h1>
</div>

<form method="post" asp-controller="Usuario" asp-action="Editar">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" asp-for="Nome" placeholder="Digite o nome do usuario">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="Login">Login</label>
        <input type="ph" class="form-control" asp-for="Login" placeholder="Digite o celular do usuário">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Digite o e-mail do usuário">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="Perfil">Perfil</label>
        <select class="form-control" asp-for="Perfil">
            <option value="">Selecione</option>
            <option value="@PerfilEnum.Administrador">Administrador</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)
    </div>

    <br />

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary btn-block">Editar</button>
        <a class="btn btn-secondary btn-block" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
    </div>
</form>


