@model ContatoModel

@{
    ViewData["Title"] = "Confirmação apagar o Contato";
}


<div class="text-center">
    <h3 class="display-4">Realmente deseja apagar o Contato (@Model.Nome)</h3>
</div>

<div class="d-grid gap-2">
    <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Index">Cancelar Exclusão</a>
    <a class="btn btn-danger" role="button" asp-route-id="@Model.Id" asp-controller="Contato" asp-action="Apagar">Confirmar Exclusão</a>
</div>